<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="364dp"
            android:id="@+id/myItems"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1.00" />


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Test Data"
            android:id="@+id/addTestDataButton"
            android:layout_gravity="right"
            android:layout_weight="1.00" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/AddButton"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Filters:"
            android:id="@+id/filtersLabel"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.00" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="all"
                    android:id="@+id/withAllCheckBox"
                    android:layout_weight="0.14"
                    android:checked="false"/>

                <RadioButton
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:text="available"
                    android:id="@+id/withAvailableCheckBox"
                    android:checked="false"/>

                <RadioButton
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:text="lent out"
                    android:id="@+id/withLentCheckBox"
                    android:checked="false"
                    android:layout_weight="1.02" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="with bids"
                    android:id="@+id/withBidCheckBox"
                    android:layout_weight="0.14"
                    android:checked="false"/>
            </RadioGroup>

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>
