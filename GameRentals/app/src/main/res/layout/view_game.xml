<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:id="@+id/card_image">


            <ImageView
                android:layout_width="207dp"
                android:layout_height="207dp"
                android:id="@+id/profile_image"
                android:src="@drawable/ic_camera"
                android:layout_gravity="center_horizontal|top"
                android:scaleType="centerCrop"
                android:cropToPadding="false"/>


        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_alignTop="@+id/card_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="207dp">

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:id="@+id/textView6"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editGameStatus"
                android:layout_weight="0.03"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

            <TextView
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:text="Game Name:"
                android:id="@+id/textView7"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editGameNameEditText"
                android:layout_weight="0.03"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:id="@+id/textView8"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editGameDescriptionText"
                android:layout_weight="0.90" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Borrower Username:"
                android:id="@+id/borrowerNameLabel" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#32CD32"
                android:id="@+id/borrowerName" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check Game Location"
                android:id="@+id/GetLocationButton"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Return to main"
                android:layout_alignParentBottom="true"
                android:id="@+id/viewGameReturnButton" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/greyRectMask"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</ScrollView>